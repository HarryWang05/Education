                <option value= "0" selected disabled>Subject</option>
                <option value= "Math">Math</option>
                <option value= "Science">Science</option>
                <option value= "CS">CS</option>
                <option value= "French">French</option>
                <option value= "English">English</option>
                <option value= "Law">Law</option>

                </select>
            <br>
            <span id="submitButton">
            </span>
            </div>
            
            <div class="footer">
                <p>WARNING: The distribution of explicit images or videos will result in a permanent ban</p>
            </div>
        </form>
        <span id="fakeButton">
            <button onclick="notsigned()">Share</button>
        </span>
    </div>
    <script src="javascripts/share_script.js"></script>
    </body>
</html>